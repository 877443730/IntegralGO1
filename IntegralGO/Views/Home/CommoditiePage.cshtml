
@{
    ViewBag.Title = "CommoditiePage";
}
<style>
    .cPageItem {
        text-align:left;
        width:90%;
    }
</style>
<div style="margin-top:13%;text-align:center;padding-left:5%">
    @{
        var postcost = "";
        List<dynamic> commodities = ViewData["commoditie"] as List<dynamic>;
        foreach (var item in commodities)
        {
            if (item.postage == 0)
            {
                postcost = "包邮";
            }
            else
            {
                postcost = item.postage + "元";
            }
            <div style="width:100%;">
                <img style="width:90%;height:200px;margin-left:-5%" src="~/Img/@item.commoditiePath" />
            </div>
            <div class="cPageItem">
                <h3>@item.commoditieName</h3>
            </div>
            <div class="cPageItem" style="font-size:small;margin-top:-3%;color:#8e8e8e">
                @item.Ctitle
            </div>
            <div class="row" style="font-size:smaller;margin-left:-8%">
                <span class="col-33">市场价：@item.price 元</span><span class="col-33">邮费：@postcost</span><span class="col-33">库存：@item.stock 件</span>
            </div>
            <div class="cPageItem" style="margin-bottom:15%">
                <p>奖品说明：<br /><span style="font-size:smaller;color:dimgray">@item.explain</span></p>
                <p>使用说明：<br /><span style="font-size:smaller;color:dimgray">@item.exchangeInstructions</span></p>
            </div>
            <div>
                <a href='#' class='button button-fill open-panel' style='position:fixed;bottom:10%; width:90%;border-radius: 1rem 1rem 1rem 1rem;background-color:orange'>@item.useIntegral 积分兑换</a>
            </div>
        }
    }
</div>

